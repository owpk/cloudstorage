<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.control.TreeView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="main_window" styleClass="body" stylesheets="@css_main_scene.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.owpk.controller.MainSceneController">
   <children>

      <HBox maxHeight="30.0" minHeight="30.0" prefHeight="30.0" VBox.vgrow="ALWAYS">
         <children>
            <MenuBar fx:id="drag_menu" styleClass="top_menu_bar" stylesheets="@css_main_scene.css" HBox.hgrow="ALWAYS">
              <menus>
                <Menu mnemonicParsing="false" text="File">
                  <items>
                    <MenuItem mnemonicParsing="false" text="Close" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Edit">
                  <items>
                    <MenuItem mnemonicParsing="false" text="Delete" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                  <items>
                    <MenuItem mnemonicParsing="false" text="About" />
                  </items>
                </Menu>
              </menus>
            </MenuBar>
            <Button fx:id="expand_btn" maxHeight="30.0" minHeight="30.0" mnemonicParsing="false" prefHeight="30.0" prefWidth="30.0" stylesheets="@css_main_scene.css" text="—">
               <styleClass>
                  <String fx:value="main_window_ctrl_btn" />
                  <String fx:value="roll_down_btn" />
               </styleClass></Button>
            <Button fx:id="collapse_btn" maxHeight="30.0" minHeight="30.0" mnemonicParsing="false" prefHeight="30.0" prefWidth="30.0" stylesheets="@css_main_scene.css" text="☐">
               <styleClass>
                  <String fx:value="main_window_ctrl_btn" />
                  <String fx:value="roll_up_btn" />
               </styleClass></Button>
            <Button fx:id="shut_down_btn" graphicTextGap="1.0" maxHeight="30.0" minHeight="30.0" mnemonicParsing="false" prefHeight="30.0" prefWidth="30.0" stylesheets="@css_main_scene.css" text="✕">
               <styleClass>
                  <String fx:value="main_window_ctrl_btn" />
                  <String fx:value="shut_down_btn" />
               </styleClass></Button>
         </children>
      </HBox>

      <HBox prefHeight="100.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
         <children>
            <VBox fx:id="tree_window" maxWidth="200.0" prefWidth="200.0" scaleShape="false" styleClass="left_tree_panel" stylesheets="@css_main_scene.css" HBox.hgrow="ALWAYS">
               <children>
                  <TreeView fx:id="tree_view" maxWidth="300.0" minWidth="300.0" prefWidth="300.0" styleClass="left_tree_panel" stylesheets="@css_main_scene.css" VBox.vgrow="ALWAYS" />
               </children>
            </VBox>
            <SplitPane dividerPositions="0.5" styleClass="main_split_pane" stylesheets="@css_main_scene.css" HBox.hgrow="ALWAYS">
               <items>
                   <fx:include fx:id="client_panel_view" source="client_panel.fxml" />
                   <fx:include fx:id="cloud_panel_view" source="cloud_panel.fxml" />
               </items>
            </SplitPane>
         </children>
      </HBox>

      <HBox prefHeight="18.0" prefWidth="818.0" styleClass="footer" stylesheets="@css_main_scene.css">
         <children>
            <Label text="UTF-8" />
            <Label fx:id="status_label" styleClass="status_label" stylesheets="@css_main_scene.css">
               <HBox.margin>
                  <Insets left="15.0" />
               </HBox.margin>
            </Label>
         </children>
      </HBox>
   </children>
</VBox>
